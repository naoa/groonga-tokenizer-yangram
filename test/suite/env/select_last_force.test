#@omit "ommited."
#export GRN_VGRAM_NOT_FORCE_PREFIX=1
#export GRN_VGRAM_ADD_ALL_EXPAND_TOKEN=1

register tokenizers/yangram

table_create vgram_words TABLE_HASH_KEY ShortText
load --table vgram_words
[
{"_key": "データ"},
{"_key": "デー"}
]

table_create Memos TABLE_NO_KEY
column_create Memos content COLUMN_SCALAR ShortText

table_create Terms TABLE_PAT_KEY ShortText \
  --default_tokenizer TokenYaVgramQuad \
  --normalizer NormalizerAuto
column_create Terms memos_content COLUMN_INDEX|WITH_POSITION Memos content

load --table Memos
[
{"content": "動画データスデータス"}
]

select Memos --match_columns content --query "動画データスデータス" --output_columns content,_score --match_escalation_threshold -1
