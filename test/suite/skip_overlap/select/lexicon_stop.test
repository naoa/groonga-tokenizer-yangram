register tokenizers/yangram

yangram_register 2 --skip_overlap 1 --skip_stopword 1

table_create Entries TABLE_NO_KEY
column_create Entries body COLUMN_SCALAR ShortText

table_create Terms TABLE_PAT_KEY ShortText --default_tokenizer TokenYaBigramSkipOverlapStopword --normalizer NormalizerAuto
column_create Terms document_index COLUMN_INDEX|WITH_POSITION Entries body
column_create Terms @stopword COLUMN_SCALAR Bool

load --table Entries
[
{"body": "the広告評論家"}
]

load --table Terms
[
{"_key": "the", "@stopword": true }
]

select Entries --output_columns \
  --match_columns body --query 'the広告評論家' \
  --output_columns 'body, _score'

